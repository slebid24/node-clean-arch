{
	"extends": "@tsconfig/node20/tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"sourceMap": true,
		"target": "es6",
		"module": "Node16",
		"baseUrl": ".",
		"typeRoots": ["src/@types", "./node_modules/@types"],
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"paths": {
			"*": ["src/*"]
		}
	},
	"include": ["src", "tests/**/*", "jest.config.ts"],
	"exclude": ["node_modules"]
}
